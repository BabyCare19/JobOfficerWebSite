@model JobOfficerWebsite.Models.ApplyForJob

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>حذف الوظيفة المتقدم اليها</h2>

<h3>هل أنت متاكد من حذف هذه الوظيفة ؟</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
           عنوان الوظيفة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.job.JobTitle)
        </dd>

       

        <dt>
           نص الارسال
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
          تاريخ الارسال
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplyDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("العودة الي قائمة الوظائف", "GetJobByUser")
        </div>
    }
</div>
