@model JobOfficerWebsite.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تفاصيل الوظيفة</h2>

<div>
    @*<h4>Job</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
            @*@Html.DisplayFor(model => model.JobContent)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.JobImage)*@
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)"
                 style="height:128px; width:128px"
                 class="thumbnail" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("التقدم الي هذه الوظيفة ", "ApplyJob", new { id = Model.Id }, new { @class = "btn btn-success" }) |
    @Html.ActionLink("العودة الي الصفحة الرئيسية", "Index", new { @class = "btn btn-default" })
</p>
